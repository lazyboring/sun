<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.niec.mall.dao.UmsAdminDao">

    <resultMap type="com.niec.mall.entity.UmsAdmin" id="UmsAdminMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="icon" column="icon" jdbcType="VARCHAR"/>
        <result property="email" column="email" jdbcType="VARCHAR"/>
        <result property="nickName" column="nick_name" jdbcType="VARCHAR"/>
        <result property="note" column="note" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="loginTime" column="login_time" jdbcType="TIMESTAMP"/>
        <result property="status" column="status" jdbcType="INTEGER"/>
    </resultMap>

    <resultMap id="UmsAdminVo" type="com.niec.mall.vo.UserAdminVo">
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
    </resultMap>
    
    <resultMap id="UserAuthorityVo" type="com.niec.mall.vo.UserAuthorityVo">
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="authority" column="name" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="UmsAdminMap">
        select
          id, username, password, icon, email, nick_name, note, create_time, login_time, status
        from mall_tiny.ums_admin
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="UmsAdminMap">
        select
          id, username, password, icon, email, nick_name, note, create_time, login_time, status
        from mall_tiny.ums_admin
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="UmsAdminMap">
        select
          id, username, password, icon, email, nick_name, note, create_time, login_time, status
        from mall_tiny.ums_admin
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="username != null and username != ''">
                and username = #{username}
            </if>
            <if test="password != null and password != ''">
                and password = #{password}
            </if>
            <if test="icon != null and icon != ''">
                and icon = #{icon}
            </if>
            <if test="email != null and email != ''">
                and email = #{email}
            </if>
            <if test="nickName != null and nickName != ''">
                and nick_name = #{nickName}
            </if>
            <if test="note != null and note != ''">
                and note = #{note}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
            <if test="loginTime != null">
                and login_time = #{loginTime}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
        </where>
    </select>
    <select id="queryListByStatus" resultMap="UmsAdminVo">
        select username,password from ums_admin u where u.status = #{status}
    </select>

    
<!--   根据用户名查询用户权限-->
    <select id="queryUserAuthorityVo" resultType="com.niec.mall.vo.UserAuthorityVo">
        select a.username,r.name from ums_admin a,ums_role r,ums_admin_role_relation u where u.admin_id = #{id} and u.role_id = r.id
    </select>
<!--    <select id="queryIdByName" resultType="java.lang.Long">-->
<!--        select id from ums_admin  where username = #{username}-->
<!--    </select>-->

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into mall_tiny.ums_admin(username, password, icon, email, nick_name, note, create_time, login_time, status)
        values (#{username}, #{password}, #{icon}, #{email}, #{nickName}, #{note}, #{createTime}, #{loginTime}, #{status})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update mall_tiny.ums_admin
        <set>
            <if test="username != null and username != ''">
                username = #{username},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="icon != null and icon != ''">
                icon = #{icon},
            </if>
            <if test="email != null and email != ''">
                email = #{email},
            </if>
            <if test="nickName != null and nickName != ''">
                nick_name = #{nickName},
            </if>
            <if test="note != null and note != ''">
                note = #{note},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="loginTime != null">
                login_time = #{loginTime},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from mall_tiny.ums_admin where id = #{id}
    </delete>

</mapper>