<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.niec.mall.dao.PmsProductAttributeCategoryDao">

    <resultMap type="com.niec.mall.entity.PmsProductAttributeCategory" id="PmsProductAttributeCategoryMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="attributeCount" column="attribute_count" jdbcType="INTEGER"/>
        <result property="paramCount" column="param_count" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="PmsProductAttributeCategoryMap">
        select
          id, name, attribute_count, param_count
        from mall_tiny.pms_product_attribute_category
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="PmsProductAttributeCategoryMap">
        select
          id, name, attribute_count, param_count
        from mall_tiny.pms_product_attribute_category
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="PmsProductAttributeCategoryMap">
        select
          id, name, attribute_count, param_count
        from mall_tiny.pms_product_attribute_category
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="attributeCount != null">
                and attribute_count = #{attributeCount}
            </if>
            <if test="paramCount != null">
                and param_count = #{paramCount}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into mall_tiny.pms_product_attribute_category(name, attribute_count, param_count)
        values (#{name}, #{attributeCount}, #{paramCount})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update mall_tiny.pms_product_attribute_category
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="attributeCount != null">
                attribute_count = #{attributeCount},
            </if>
            <if test="paramCount != null">
                param_count = #{paramCount},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from mall_tiny.pms_product_attribute_category where id = #{id}
    </delete>

</mapper>